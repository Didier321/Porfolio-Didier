---
import IconArrow from '../components/icons/IconArrow.astro';
import IconX from '../components/icons/IconX.astro';

interface Experience {
  company: string;
  companyDescription: string;
  role: string;
  employmentPeriod: string;
  roleDescription: string;
  keyResponsibilities: string[];
  achievements: string[];
  technologiesAndTools: string[];
}

const {company, companyDescription, role, employmentPeriod, roleDescription, keyResponsibilities, achievements, technologiesAndTools} = Astro.props;


---

<modalExperience>

  <button
    data-modal-target="default-modal"
    data-modal-toggle="default-modal"
    
    class="outfit border-2 p-4 rounded-[20px] ml-3 flex justify-center items-center gap-3"
    type="button"
  >
    Saber más
  <IconArrow/>
  </button>



  <div
    id="default-modal"
    tabindex="-1"
    aria-hidden="true"
    class="hidden overflow-y-auto 
    overflow-x-hidden fixed top-0 right-0 
    left-0 z-50 justify-center items-center px-4
    w-full md:inset-0 h-[100vh] max-h-[100vh] bg-slate-950/75"
  >
    <div class="relative p-4 w-full max-w-4xl max-h-full">

      <div class="relative bg-white/95 rounded-lg shadow border-[4px] border-blue/40">


        <div class="flex items-center justify-between p-4 md:p-5 border-b rounded-t dark:border-gray-600">
          <h3 class="text-2xl font-bold aoutfit text-black ">
            {company}
          </h3>
          <button
            type="button"
            class="text-gray-400 bg-transparent hover:bg-gray-200 
            hover:text-gray-900 rounded-lg text-sm w-8 h-8 ms-auto inline-flex justify-center items-center dark:hover:bg-gray-600 dark:hover:text-white"
            data-modal-hide="default-modal"
          >
            <IconX/>
          </button>
        </div>


        <div class="p-4 md:p-5 space-y-4 text-black/60 flex flex-col  gap-1 outfit font-semibold text-base">
          <div class="ms:pt-2 md:flex md:justify-between md:items-center">
            <div class="font-bold text-black text-xl">
              {role}
            </div>
            <div>
              {employmentPeriod}
            </div>
          </div>
          <h1 class="font-bold text-black text-xl">Compañia</h1>
          <div>
            {companyDescription}
          </div>
          <h1 class="font-bold text-black text-xl">Logros</h1>
          <div>
            {roleDescription}
          </div>
          <div>
            {keyResponsibilities}
          </div>
          <div>
            {achievements}
          </div>
          <h1 class="font-bold text-black text-xl">Tecnologías</h1>
          <div class="flex flex-wrap gap-2">
            {
              technologiesAndTools.map((tecnologi) => (
                <div class=" border w-[auto] py-2 px-4 rounded-[50px]">{tecnologi}</div>
              ))
            }
          </div>
        </div>
        
      </div>
    </div>
  </div>
</modalExperience>
