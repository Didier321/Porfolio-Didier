---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Home from '../components/Home.astro';
import IconGit from '../components/icons/IconGit.astro';
import IconLinkedin from '../components/icons/IconLinkedin.astro';
import Badge from '../components/Badge.astro';
import Experience from '../components/Experience.astro';
import Aboutme from '../components/Aboutme.astro';
import Proyects from '../components/Proyects.astro';
import IconEmail from '../components/icons/IconEmail.astro';
import HardSkills from '../components/HardSkills.astro';
import ButtonDownloadCv from '../components/ButtonDownloadCv.astro';
import IconDownload from '../components/icons/IconDownload.astro';
import Footer from '../components/Footer.astro';
import Form from '../components/Form';

---

<Layout title="Welcome to Astro.">
	<main class="your_css_selector_here flex justify-center inset-0 items-start px-5 py-24 relative min-h-screen w-full">

	
		<Header/>
		<div class="md:max-w-[900px] mx-6 py-3 md:py-36">

			<div
			data-aos="fade-down"
			data-aos-anchor-placement="center-bottom"
			class="w-full flex ">
				<Home/>
			</div>
			<div
			data-aos="fade-right"
			class="w-full mt-8 ">
				<ButtonDownloadCv IconDownload={IconDownload}/>
				<Badge Icon={IconGit} title="GitHub" link='https://github.com/Didier321'/>
				<Badge Icon={IconLinkedin} title="Linkedin" link='https://www.linkedin.com/in/didier-casta%C3%B1eda-borja-741185274/'/>
				<Badge Icon={IconEmail} title="Correo" link='https://www.linkedin.com/in/didier-casta%C3%B1eda-borja-741185274/'/>
			</div>

			<div 
            class="w-full mt-28 pt-20">
				<Experience/>
			</div>
			<div
            data-aos="fade-up"
            data-aos-duration="3000"
            class="w-full mt-28">
				<Aboutme/>
			</div>
			<div class="w-full mt-28">
				<HardSkills/>
			</div>
			<div class="w-full mt-28">
				<Proyects/>
			</div>
			<div class="w-full mt-28">
				<Form/>
			</div>
			
		</div>
	</main>
    <Footer/>
</Layout>

